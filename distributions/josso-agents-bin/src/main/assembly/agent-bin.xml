<!--
This assembles the entire set of 3rd party dependencies used by agents.
-->
<assembly>

    <id></id>
    <formats>
        <format>jar</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>

        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <unpack>true</unpack>

            <includes>
                <include>${pom.groupId}:josso-common</include>
                <include>${pom.groupId}:josso-core</include>
                <include>${pom.groupId}:josso-agent</include>
                <include>${pom.groupId}:josso-protocol-client</include>
                <include>${pom.groupId}:josso-ws</include>
            </includes>

        </dependencySet>

    </dependencySets>


</assembly>