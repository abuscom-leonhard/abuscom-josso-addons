<!--
This assembles the entire set of 3rd party dependencies used by agents.
-->
<assembly>

    <id>3rdparty-j14</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <dependencySets>

        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <unpack>false</unpack>

            <excludes>
                <exclude>${pom.groupId}:*</exclude>
                <exclude>org.apache.axis:axis</exclude>
                <exclude>org.apache.axis:axis-jaxrpc</exclude>
                <exclude>org.apache.axis:axis-saaj</exclude>
                <exclude>org.apache.axis:axis-ant</exclude>
                <exclude>org.apache.axis:axis-saaj</exclude>
                <exclude>axis:axis-wsdl4j</exclude>
                <exclude>commons-discovery:commons-discovery</exclude>
                <exclude>commons-httpclient:commons-httpclient</exclude>
                <exclude>commons-logging:commons-logging</exclude>
                <exclude>commons-logging:commons-logging-api</exclude>
            </excludes>

        </dependencySet>

    </dependencySets>


</assembly>