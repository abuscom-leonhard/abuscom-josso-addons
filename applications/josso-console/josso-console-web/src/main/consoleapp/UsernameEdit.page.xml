<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd"
      no-conversation-view-id="/UsernameList.xhtml"
      login-required="true">
   
   <begin-conversation join="true"/>
   
   <action execute="#{usernameHome.wire}"/>
   
   <param name="usernameFrom"/>
   <param name="usernameLogin" value="#{usernameHome.usernameLogin}"/>

   <navigation from-action="#{register.persist}">
       <end-conversation/>
       <redirect view-id="/Username.xhtml"/>
   </navigation>
   
   <navigation from-action="#{usernameHome.update}">
       <end-conversation/>
       <redirect view-id="/Username.xhtml"/>
   </navigation>
   
   <navigation from-action="#{usernameHome.remove}">
       <end-conversation/>
       <redirect view-id="/UsernameList.xhtml"/>
   </navigation>
   
</page>
